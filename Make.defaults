CC		= gcc
RPM_OPT_FLAGS	?= -O2 -g -pipe -Wp,-D_FORTIFY_SOURCE=2 -fstack-protector
CFLAGS		+= $(RPM_OPT_FLAGS) -std=gnu99 -Wall -Werror -Wno-error=unused-function -Wno-unused-function -ggdb
CCLDFLAGS	= -shared
LDFLAGS		:=
INSTALL		= install
VERBOSE_TEST	:=
ifneq ($(VERBOSE_TEST),)
	VERBOSE_TEST="--verbose"
endif
