set -E
set -e

if [ -x /usr/libexec/grubby/functions ]; then
    source /usr/libexec/grubby/functions
else
    echo "Could not import grubby library functions" 1>&2
    exit 1
fi

CONFIG=/etc/grub2.cfg
checkarch x86_64
checkcfg $CONFIG
checknotefi
CONFIG=$(realpath $CONFIG)

clobber()
{
    grub2_mkconfig $CONFIG
}

main --configfile=$CONFIG --loader=--grub2 "$@"
